# ===========================================
# WHATSAPP HUB - CONFIGURACIÓN DE ENTORNO
# ===========================================

# Configuración del Servidor
NODE_ENV=development
PORT=3001
HOST=localhost

# ===========================================
# WHATSAPP-WEB.JS CONFIGURACIÓN
# ===========================================
WHATSAPP_SERVICE=whatsapp-web
WHATSAPP_SESSION_NAME=streaming-bot
WHATSAPP_MULTI_DEVICE=true
WHATSAPP_HEADLESS=true

# ===========================================
# OPENAI / GPT CONFIGURACIÓN
# ===========================================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500
OPENAI_PRESENCE_PENALTY=0.6
OPENAI_FREQUENCY_PENALTY=0.5
OPENAI_TIMEOUT=30000

# Habilitar respuestas automáticas
AUTO_RESPONSE_ENABLED=true
AUTO_RESPONSE_DELAY=2000

# ===========================================
# N8N CONFIGURACIÓN
# ===========================================
N8N_URL=http://localhost:5678
N8N_API_KEY=tu_n8n_api_key_aqui
N8N_WEBHOOK_BASE_URL=http://localhost:5678/webhook

# ===========================================
# BASE DE DATOS CONFIGURACIÓN
# ===========================================
DATABASE_TYPE=json

# MongoDB (para migración futura)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=whatsapp_hub
MONGODB_USERNAME=
MONGODB_PASSWORD=

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================
JWT_SECRET=tu_jwt_secret_super_seguro_aqui
JWT_EXPIRES_IN=24h
WEBHOOK_AUTH_TOKEN=tu_webhook_auth_token
API_RATE_LIMIT=100

# ===========================================
# CONFIGURACIÓN DE LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_MAX_SIZE=10mb
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# ===========================================
# CONFIGURACIÓN DE BACKUP
# ===========================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30
BACKUP_CLOUD_ENABLED=false

# ===========================================
# CONFIGURACIÓN DE CRON JOBS
# ===========================================
REMINDER_CRON_ENABLED=true
REMINDER_CRON_SCHEDULE=0 9 * * *
REMINDER_TIME_ZONE=America/Lima

BACKUP_CRON_ENABLED=true
BACKUP_CRON_SCHEDULE=0 2 * * *

CLEANUP_CRON_ENABLED=true
CLEANUP_CRON_SCHEDULE=0 3 * * 0

# ===========================================
# CONFIGURACIÓN DE PERFORMANCE
# ===========================================
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=100

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

HTTP_TIMEOUT=10000
WHATSAPP_TIMEOUT=15000
DB_TIMEOUT=5000

# ===========================================
# CONFIGURACIÓN DE DESARROLLO
# ===========================================
DEBUG=whatsapp-hub:*
VERBOSE_LOGGING=true
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# ===========================================
# CONFIGURACIONES ESPECÍFICAS DEL NEGOCIO
# ===========================================
DEFAULT_MESSAGE_DELAY=2000
MAX_BULK_MESSAGES=100
REMINDER_DAYS_BEFORE=3,2,1,0

# Precios de servicios
NETFLIX_PRICE=25
DISNEY_PRICE=20
PRIME_VIDEO_PRICE=15
HBO_MAX_PRICE=22
SPOTIFY_PRICE=18
YOUTUBE_PREMIUM_PRICE=12

# Configuración regional
TIMEZONE=America/Lima
CURRENCY=PEN
COUNTRY_CODE=51
PHONE_PREFIX=51

# ===========================================
# VERSIÓN Y ESTADO
# ===========================================
MAINTENANCE_MODE=false
FEATURE_FLAGS=auto_response,bulk_messages,gpt_responses
VERSION=2.0.0
BUILD=001